doctype
html
    head
        meta(charset='utf-8')
        title #{title}
        include ../includes/admin_head

    body
        div.header.signin-header
            div.am-g
                h1 
                    a(href="/") 翘课吧
            hr 

        div.am-g
            div.am-u-lg-6.am-u-md-8.am-u-sm-centered
                div.row
                    label 快捷登录
                    div.am-btn-group
                        a(href="/oauth").am-btn.am-btn-success.am-btn-sm
                            i.am-icon-weixin.am-icon-sm 微信
                hr
                div.row
                    form(action="/user/login",method="POST").am-form
                        div.row
                            label(for="phone") 手机号:
                            input#phone(type="number" name="phone" value="")
                        div.row
                            label(for="password") 密码:
                            input#password(type="password" name="password" value="")
                        div.row.btn-row
                            input#loginBtn.btn-login.am-btn.am-btn-primary.am-btn-lg(type="submit" name="" value="登 录")
                        div.row.btn-row
                            a(href="/user/reg")
                                input.am-btn.am-btn-default.am-fr(type="button" name="" value="没有帐号?先去注册")


                        
                        

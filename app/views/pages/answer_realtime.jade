extends ../layout

block content
    div.container    
        div.weui_cells_title 题目:#{question.attributes.title}
        input#qid(type="hidden" value="#{question.attributes.qid}")
        input#qObjectId(type="hidden" value="#{question.id}")
        input#qTitle(type="hidden" value="#{question.attributes.title}")
        input#qType(type="hidden" value="#{question.attributes.type}")
        case question.attributes.type
            when 1
                div.weui_cells.weui_cells_radio
                    label.weui_cell.weui_check_label(for="x11")
                        div.weui_cell_bd.weui_cell_primary
                            p A #{question.attributes.optionA}
                        
                        div.weui_cell_ft
                            input#x11.weui_check(type="radio" name="radio1") 
                            span.weui_icon_checked
                        
                   
                    label.weui_cell.weui_check_label(for="x12")

                        div.weui_cell_bd.weui_cell_primary
                            p B #{question.attributes.optionB}
                        
                        div.weui_cell_ft
                            input#x12.weui_check(type="radio" name="radio1")
                            span.weui_icon_checked

                    label.weui_cell.weui_check_label(for="x13")

                        div.weui_cell_bd.weui_cell_primary
                            p C #{question.attributes.optionC}
                        
                        div.weui_cell_ft
                            input#x13.weui_check(type="radio" name="radio1")
                            span.weui_icon_checked

                    label.weui_cell.weui_check_label(for="x14")

                        div.weui_cell_bd.weui_cell_primary
                            p D #{question.attributes.optionD}
                        
                        div.weui_cell_ft
                            input#x14.weui_check(type="radio" name="radio1")
                            span.weui_icon_checked

            when 2
                div.weui_cells.weui_cells_checkbox
                    label.weui_cell.weui_check_label(for="x11")
                        div.weui_cell_bd.weui_cell_primary
                            p A #{question.attributes.optionA}
                        
                        div.weui_cell_ft
                            input#x11.weui_check(type="checkbox" name="radio1") 
                            span.weui_icon_checked
                        
                   
                    label.weui_cell.weui_check_label(for="x12")

                        div.weui_cell_bd.weui_cell_primary
                            p B #{question.attributes.optionB}
                        
                        div.weui_cell_ft
                            input#x12.weui_check(type="checkbox" name="radio1")
                            span.weui_icon_checked

                    label.weui_cell.weui_check_label(for="x13")

                        div.weui_cell_bd.weui_cell_primary
                            p C #{question.attributes.optionC}
                        
                        div.weui_cell_ft
                            input#x13.weui_check(type="checkbox" name="radio1")
                            span.weui_icon_checked

                    label.weui_cell.weui_check_label(for="x14")

                        div.weui_cell_bd.weui_cell_primary
                            p D #{question.attributes.optionD}
                        
                        div.weui_cell_ft
                            input#x14.weui_check(type="checkbox" name="radio1")
                            span.weui_icon_checked

            when 3
                div.weui_cells.weui_cells_form
                    div.weui_cell
                        div.weui_cell_bd.weui_cell_primary
                            textarea#answerContent.weui_textarea(placeholder="请输入你的答案" rows="10")
                    
        a(href="javascript:;").weui_btn.weui_btn_primary.am-g.submit-btn#answerSubmitBtn 提交

    script(src="/js/lib/require.js" data-main="/js/app/answer_open")

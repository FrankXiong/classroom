extends ../admin_layout

block content
    include ../includes/admin_sidebar
    link(href="/css/page/admin_realtime.css",rel="stylesheet")
    div.admin-content
            div.admin-content-body
                include ../includes/admin_content_header                    
                div.am-g
                    div.am-u-sm-12
                        div.am-tabs(data-am-tabs="{noSwipe: 1}")
                            ul.am-tabs-nav.am-nav.am-nav-tabs
                                li.am-active 
                                    a(href="#tab1") 出题
                                li
                                    a(href="#tab2") 回答情况

                            div.am-tabs-bd
                                div.am-tab-panel.am-fade.am-in.am-active#tab1
                                    form.am-form#formAddOpenQuestion
                                        div.am-g.am-margin-top
                                            div.am-u-sm-4.am-u-md-2.am-text-right 问题名称
                                            div.am-u-sm-8.am-u-md-4
                                                input#questionTitle(type="text" value="" name="questionTitle").am-input-sm
                                            div.am-hide-sm-only.am-u-md-6 *必填

                                        div.am-g.am-margin-top
                                            div.am-u-sm-4.am-u-md-2.am-text-right 问题描述
                                                
                                            div.am-u-sm-8.am-u-md-4.am-u-end.col-end
                                                input#questionDesc(type="text" value="" name="questionDesc").am-input-sm
                                            div.am-hide-sm-only.am-u-md-6 *必填
                                        div.am-margin
                                            button#addQuestionBtn(type="button").am-btn.am-btn-primary.am-fr.am-btn-lg 发布 

                                div.am-tab-panel.am-fade.am-in.am-active#tab2
                                    span 回答情况

    script(src='/js/lib/AV.push.js')
    // script(src='/js/app/admin_push.js')
    script(src="/js/lib/require.js" data-main="/js/app/admin_open")
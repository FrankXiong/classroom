doctype
html
    head
        meta(charset='utf-8')
        title #{title}
        include ../includes/admin_head

    body
        div.header.signin-header
            div.am-g
                h1 翘课吧
                p 后台管理系统
            hr 

        div.am-g
            div.am-u-lg-6.am-u-md-8.am-u-sm-centered
                h3  快捷登录
                hr
                div.am-btn-group
                    a(href="#").am-btn.am-btn-success.am-btn-sm
                        i.am-icon-weixin.am-icon-sm 微信
                br
                br
                form.am-form(method="post")
                    label(for="email") 手机号:
                    input#phone(type="number" name="" value="")
                    br
                    label(for="password") 密码:
                    input#password(type="password" name="" value="")
                    br
                    label(for="remember-me")
                        input#remember-me(type="checkbox") 
                        span 记住密码
                  
                    br 
                    div.am-cf
                        input.am-btn.am-btn-default.am-btn-sm.am-fl(type="submit" name="" value="忘记密码 ^_^? ")
                        input.am-btn.am-btn-primary.am-btn-sm.am-fr(type="submit" name="" value="登 录")
                        
                        

extends ../admin_layout

block content
    include ../includes/admin_sidebar

    div.admin-content
        div.am-fl.am-cf.ad-padding-bottom-0
            strong.am-text-primary.am-text-lg 教学班管理 / 
            small 添加教学班
        div.am-panel
            if user
                form.am-form
                    input#tid(type="hidden" value="#{user._id}")
                    div.am-g.am-margin-top
                        div.am-u-sm-4.am-u-md-2.am-text-right 课程ID
                        div.am-u-sm-8.am-u-md-4
                            input#courseId(type="text").am-input-sm
                        div.am-hide-sm-only.am-u-md-6 *必填

                    div.am-g.am-margin-top
                        div.am-u-sm-4.am-u-md-2.am-text-right 课程名
                            
                        div.am-u-sm-8.am-u-md-4.am-u-end.col-end
                            input#courseName(type="text").am-input-sm
                        div.am-hide-sm-only.am-u-md-6 *必填
                            
                            
                    div.am-g.am-margin-top
                        div.am-u-sm-4.am-u-md-2.am-text-right 总选课人数
                            
                        div.am-u-sm-8.am-u-md-4
                            input#total(type="number").am-input-sm
                        div.am-hide-sm-only.am-u-md-6 *必填
                            
                    div.am-g.am-margin-top
                        div.am-u-sm-4.am-u-md-2.am-text-right 持续时间
                            
                        div.am-u-sm-8.am-u-md-4
                            input#duration(type="text").am-input-sm
                        div.am-hide-sm-only.am-u-md-6 *必填（开始周次-结束周次，实例：1-16）
                            
                    div.am-g.am-margin-top
                        div.am-u-sm-4.am-u-md-2.am-text-right 总学时
                            
                        div.am-u-sm-8.am-u-md-4
                            input#classHours(type="number").am-input-sm
                        div.am-hide-sm-only.am-u-md-6 *必填
                           
                    div.am-g.am-margin-top
                        div.am-u-sm-4.am-u-md-2.am-text-right 当前课堂ID
                            
                        div.am-u-sm-8.am-u-md-4.am-text-left
                            input#currentLesson(type="number").am-input-sm
                    div.am-margin
                        button(type="reset").am-btn.am-btn-default.am-btn-xs 放弃保存
                        button#addClassBtn(type="button").am-btn.am-btn-primary.am-btn-xs 提交保存
        
    script(src="/js/app/class.js")
        
                        
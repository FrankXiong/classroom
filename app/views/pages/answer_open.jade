extends ../layout

block content
    div.container    
        div.weui_cells_title 题目:#{question.attributes.title}
        div.weui_cells_title 描述:#{question.attributes.desc}
        input#qid(type="hidden" value="#{question.attributes.qid}")
        input#qObjectId(type="hidden" value="#{question.id}")
        input#qTitle(type="hidden" value="#{question.attributes.title}")
        input#qType(type="hidden" value="#{question.attributes.type}")
        div.weui_cells.weui_cells_form
            div.weui_cell
                div.weui_cell_bd.weui_cell_primary
                    textarea#answerContent.weui_textarea(placeholder="请输入你的答案" rows="10")
            a(href="javascript:;").weui_btn.weui_btn_primary.am-g.submit-btn#answerSubmitBtn 提交

    script(src="/js/lib/require.js" data-main="/js/app/answer_open")
